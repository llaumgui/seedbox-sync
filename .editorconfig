; EditorConfig is awesome: http://EditorConfig.org
; top-most EditorConfig file
root = true

; Unix-style
[*]
end_of_line = lf
charset = utf-8

[*.ini.dist]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.rst]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2